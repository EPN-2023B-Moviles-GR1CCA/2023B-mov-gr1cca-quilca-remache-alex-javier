<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_ingresar_datos_actor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngresarDatosActorAct">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:background="#2A65FF"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Crear Actor"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/input_nombre_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Nombre:"
        android:inputType="text"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/input_fecha_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Fecha (YYYY-MM-DD):"
        android:inputType="text"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_actor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_actor"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre_actor" />

    <EditText
        android:id="@+id/input_casado_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Casado/a (si/no):"
        android:inputType="text"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/input_fecha_actor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_fecha_actor"
        app:layout_constraintTop_toBottomOf="@+id/input_fecha_actor" />

    <EditText
        android:id="@+id/input_altura_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Altura:"
        android:inputType="text"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/input_casado_actor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_casado_actor"
        app:layout_constraintTop_toBottomOf="@+id/input_casado_actor" />

    <Button
        android:id="@+id/btn_crear_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_selector"
        android:padding="10dp"
        android:text="Crear Actor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/input_altura_actor"
        app:layout_constraintStart_toStartOf="@+id/input_altura_actor"
        app:layout_constraintTop_toBottomOf="@+id/input_altura_actor" />

</androidx.constraintlayout.widget.ConstraintLayout>