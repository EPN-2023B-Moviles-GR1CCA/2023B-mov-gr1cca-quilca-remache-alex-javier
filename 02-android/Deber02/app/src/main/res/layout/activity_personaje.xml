<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_personajes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonajeAct">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="#2A65FF"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="PERSONAJES"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/lv_list_view_personaje"
        android:layout_width="317dp"
        android:layout_height="356dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_actor_personaje"
        app:layout_constraintStart_toStartOf="@+id/textView_actor_personaje"
        app:layout_constraintTop_toBottomOf="@+id/textView_actor_personaje" />

    <TextView
        android:id="@+id/textView_actor_personaje"
        android:layout_width="361dp"
        android:layout_height="73dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <Button
        android:id="@+id/btn_nuevo_personaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_selector"
        android:padding="10dp"
        android:text="NUEVO PERSONAJE"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/lv_list_view_personaje"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/lv_list_view_personaje"
        app:layout_constraintTop_toBottomOf="@+id/lv_list_view_personaje" />
</androidx.constraintlayout.widget.ConstraintLayout>