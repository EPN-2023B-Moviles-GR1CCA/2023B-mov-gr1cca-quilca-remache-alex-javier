<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_editar_actor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarActorAct">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:background="#2A65FF"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Editar Actor"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edit_nombre_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:inputType="text"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.751"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edit_fecha_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="text"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_nombre_actor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_nombre_actor"
        app:layout_constraintTop_toBottomOf="@+id/edit_nombre_actor" />

    <EditText
        android:id="@+id/edit_casado_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="text"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_fecha_actor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edit_fecha_actor"
        app:layout_constraintTop_toBottomOf="@+id/edit_fecha_actor" />

    <EditText
        android:id="@+id/edit_altura_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="text"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_casado_actor"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edit_casado_actor"
        app:layout_constraintTop_toBottomOf="@+id/edit_casado_actor" />

    <Button
        android:id="@+id/btn_editar_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_selector"
        android:padding="10dp"
        android:text="EDITAR"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_altura_actor"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="@+id/edit_altura_actor"
        app:layout_constraintTop_toBottomOf="@+id/edit_altura_actor" />

    <TextView
        android:id="@+id/textView_Actor"
        android:layout_width="302dp"
        android:layout_height="66dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edit_nombre_actor"
        app:layout_constraintEnd_toEndOf="@+id/edit_nombre_actor"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="@+id/edit_nombre_actor"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:gravity="center"
        android:text="Nombre"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_nombre_actor"
        app:layout_constraintEnd_toStartOf="@+id/edit_nombre_actor"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/edit_nombre_actor" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:gravity="center"
        android:text="Fecha"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_fecha_actor"
        app:layout_constraintEnd_toStartOf="@+id/edit_fecha_actor"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/edit_fecha_actor" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:gravity="center"
        android:text="Casado"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_casado_actor"
        app:layout_constraintEnd_toStartOf="@+id/edit_casado_actor"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/edit_casado_actor" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:gravity="center"
        android:text="Altura"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_altura_actor"
        app:layout_constraintEnd_toStartOf="@+id/edit_altura_actor"
        app:layout_constraintTop_toTopOf="@+id/edit_altura_actor" />

</androidx.constraintlayout.widget.ConstraintLayout>